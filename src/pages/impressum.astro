---
import BaseLayout from "../layouts/BaseLayout.astro";
import inviqonLogo from "../assets/inviqon.png";
import Navbar from "../components/Navbar.astro";

const brand = {
  name: "inviqon.",
  email: ["hello@inviqon.com", "arian.jusufi@inviqon.com", "tiemo.timtschenko@inviqon.com"],
};

const legal = {
  // Natürliche Person (Betreiber)
  fullName: "Tiemo Timtschenko", // z.B. Tiemo Timtschenko
  address1: "Kaiserstraße 91",
  address2: "40764 Langenfeld",
  country: "Deutschland",
  phone: ["+49 160 1865018", "+49 176 64039302"],

  // Falls ihr keine USt-Id habt, lieber explizit so lassen:
  vatId: "nicht vorhanden",
  register: "kein Handelsregistereintrag",

  // Inhaltlich Verantwortlicher (i. d. R. identisch mit Betreiber)
  contentResponsible: "Tiemo Timtschenko",
};
---

<BaseLayout title={`Impressum — ${brand.name}`} description={`Impressum / Legal Notice von ${brand.name}.`}>
  <Navbar brand={brand} logo={inviqonLogo} />

  <main class="relative">
    <div class="mx-auto max-w-6xl px-5">
      <section class="py-14 md:py-20">
        <div class="mx-auto w-full max-w-3xl">
          <p class="text-xs tracking-[0.24em] text-white/55">LEGAL</p>
          <h1 class="mt-4 text-3xl font-semibold tracking-tight text-white/95 md:text-5xl">
            Impressum
          </h1>
          <p class="mt-4 text-base leading-relaxed text-white/65 md:text-lg">
            Angaben gemäß § 5 TMG.
          </p>

          <div class="mt-10 space-y-6">
            <!-- Anbieter -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Anbieter</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>
                  <strong class="text-white/85">{brand.name}</strong>
                  <span class="text-white/55"> — Markenname</span>
                </p>
                <p class="mt-3 text-white/60">Diensteanbieter (natürliche Person):</p>
                <p class="text-white/85 font-medium">{legal.fullName}</p>
                <p>{legal.address1}</p>
                <p>{legal.address2}</p>
                <p>{legal.country}</p>
              </div>
            </section>

            <!-- Kontakt -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Kontakt</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>
                  E-Mail:&nbsp;
                  {brand.email.map(e => (
                    <a
                    class="text-white/85 underline decoration-white/20 hover:decoration-white/60"
                    href={`mailto:${e}`}
                    >
                      {e}
                    </a><br/>
                  ))}
                </p>
                <p>Telefon:
                  {legal.phone.map(p => (
                    <a href={`tel:${p}` } class="text-white/85 underline decoration-white/20 hover:decoration-white/60"> <br/>
                      {p}
                    </a>
                  ))}
                </p>
              </div>
            </section>

            <!-- Betreiber / Verantwortlich -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Betreiber</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>{legal.fullName}</p>
              </div>
            </section>

            <!-- Register & Steuer -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Register &amp; Umsatzsteuer</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>Handelsregister: {legal.register}</p>
                <p>USt-IdNr.: {legal.vatId}</p>
              </div>
            </section>

            <!-- Verantwortlich für den Inhalt -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Verantwortlich für den Inhalt</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>Gemäß § 18 Abs. 2 MStV:</p>
                <p class="text-white/85 font-medium">{legal.contentResponsible}</p>
                <p class="text-white/55">Adresse: wie oben</p>
              </div>
            </section>

            <!-- Haftung -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Haftungshinweis</h2>
              <div class="mt-3 space-y-3 text-sm leading-relaxed text-white/70">
                <p>
                  Trotz sorgfältiger inhaltlicher Kontrolle übernehmen wir keine Haftung für die Inhalte externer Links.
                  Für den Inhalt der verlinkten Seiten sind ausschließlich deren Betreiber verantwortlich.
                </p>
                <p>Angaben ohne Gewähr. Änderungen und Irrtümer vorbehalten.</p>
              </div>
            </section>

            <div class="pt-2 text-xs text-white/45">
              <p>Stand: {new Date().toLocaleDateString("de-DE")}</p>
            </div>

            <div class="mt-10 h-px w-full bg-gradient-to-r from-transparent via-white/15 to-transparent"></div>

            <div class="flex items-center justify-between text-sm text-white/60">
              <a class="hover:text-white" href="/">← Zurück</a>
              <a class="hover:text-white" href="/imprint">English Imprint →</a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>