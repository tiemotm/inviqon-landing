---
import Navbar from "../components/Navbar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import inviqonLogo from "../assets/inviqon.png";

const brand = {
  name: "inviqon.",
  email: ["hello@inviqon.com", "arian.jusufi@inviqon.com", "tiemo.timtschenko@inviqon.com"],
};

const legal = {
  fullName: "Tiemo Timtschenko", // same person
  address1: "Kaiserstraße 91",
  address2: "40764 Langenfeld",
  country: "Germany",
  phone: ["+49 160 1865018", "+49 176 64039302"],

  vatId: "not available",
  register: "no commercial register entry",
  contentResponsible: "Tiemo Timtschenko",
};
---

<BaseLayout title={`Imprint — ${brand.name}`} description={`Imprint / Legal Notice of ${brand.name}.`}>
  <Navbar brand={brand} logo={inviqonLogo} />

  <main class="relative">
    <div class="mx-auto max-w-6xl px-5">
      <section class="py-14 md:py-20">
        <div class="mx-auto w-full max-w-3xl">
          <p class="text-xs tracking-[0.24em] text-white/55">LEGAL</p>
          <h1 class="mt-4 text-3xl font-semibold tracking-tight text-white/95 md:text-5xl">
            Imprint
          </h1>
          <p class="mt-4 text-base leading-relaxed text-white/65 md:text-lg">
            Legal notice in accordance with applicable German law (e.g., § 5 TMG).
          </p>

          <div class="mt-10 space-y-6">
            <!-- Provider -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Provider</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>
                  <strong class="text-white/85">{brand.name}</strong>
                  <span class="text-white/55"> — brand / project name</span>
                </p>

                <p class="mt-3 text-white/60">Service provider (natural person):</p>
                <p class="text-white/85 font-medium">{legal.fullName}</p>
                <p>{legal.address1}</p>
                <p>{legal.address2}</p>
                <p>{legal.country}</p>
              </div>
            </section>

            <!-- Contact -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Contact</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>
                  Email:&nbsp;
                  {brand.email.map(e => (
                    <a
                    class="text-white/85 underline decoration-white/20 hover:decoration-white/60"
                    href={`mailto:${e}`}
                    >
                      {e}
                    </a><br/>
                  ))}
                </p>
                <p>Phone:
                  {legal.phone.map(p => (
                    <a href={`tel:${p}` } class="text-white/85 underline decoration-white/20 hover:decoration-white/60"> <br/>
                      {p}
                    </a>
                  ))}
                </p>
              </div>
            </section>

            <!-- Operator -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Operator</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>{legal.fullName}</p>
              </div>
            </section>

            <!-- Register & VAT -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Register &amp; VAT</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>Commercial Register: {legal.register}</p>
                <p>VAT ID: {legal.vatId}</p>
              </div>
            </section>

            <!-- Content responsibility -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Responsible for content</h2>
              <div class="mt-3 text-sm leading-relaxed text-white/70">
                <p>According to § 18 para. 2 MStV:</p>
                <p class="text-white/85 font-medium">{legal.contentResponsible}</p>
                <p class="text-white/55">Address: as stated above</p>
              </div>
            </section>

            <!-- Disclaimer -->
            <section class="rounded-2xl glass px-6 py-6">
              <h2 class="text-sm font-semibold text-white/90">Disclaimer</h2>
              <div class="mt-3 space-y-3 text-sm leading-relaxed text-white/70">
                <p>
                  Despite careful content control, we assume no liability for the content of external links.
                  The operators of the linked pages are solely responsible for their content.
                </p>
                <p>All information without guarantee. Subject to change and errors.</p>
              </div>
            </section>

            <div class="pt-2 text-xs text-white/45">
              <p>Last updated: {new Date().toLocaleDateString("en-GB")}</p>
            </div>

            <div class="mt-10 h-px w-full bg-gradient-to-r from-transparent via-white/15 to-transparent"></div>

            <div class="flex items-center justify-between text-sm text-white/60">
              <a class="hover:text-white" href="/impressum">← Deutsch</a>
              <a class="hover:text-white" href="/privacy">Privacy Policy →</a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>