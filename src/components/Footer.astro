---
const cta = {
  headline: "Let’s build something that feels inevitable.",
  sub:
    "Send a short note with your goal, context, and timeline. We’ll reply with a clear next step.",
  email: "hello@inviqon.com",
};
---

<section class="pb-24 pt-12 md:pt-16">
  <div class="mx-auto max-w-6xl px-5">
    <div class="glass rounded-[28px] p-7 md:p-9">
      <div class="flex items-start justify-between gap-6 flex-wrap">
        <div>
          <h2 class="text-lg font-semibold text-white/90">{cta.headline}</h2>
          <p class="mt-2 max-w-2xl text-white/70 leading-relaxed">
            {cta.sub}
          </p>
        </div>

        <a
          class="rounded-2xl bg-white/10 px-5 py-3 text-sm font-semibold text-white ring-1 ring-white/10 transition hover:bg-white/15"
          href={`mailto:${cta.email}?subject=inviqon%20%E2%80%94%20Inquiry&body=Hi%20inviqon%2C%0A%0AGoal%3A%20...%0AContext%3A%20...%0ATimeline%3A%20...%0A%0AThanks%2C%0A`}
        >
          {cta.email}
        </a>
      </div>

      <div class="mt-6 h-px w-full bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>

      <footer class="mt-5 flex items-center justify-between gap-4 flex-wrap text-xs text-white/55">
        <span>© {new Date().getFullYear()} inviqon</span>
        <span class="flex items-center gap-3">
          <a class="hover:text-white/80 transition" href="/impressum">Impressum</a>
          <span class="opacity-30">·</span>
          <a class="hover:text-white/80 transition" href="/privacy">Privacy</a>
        </span>
      </footer>
    </div>
  </div>
</section>