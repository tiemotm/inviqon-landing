---
import Navbar from "../components/Navbar.astro";
import { Image } from "astro:assets";
import inviqonLogo from "../assets/inviqon.png";

const brand = {
  name: "inviqon.",
  navCta: "hello@inviqon.com",
  headline: "We build the digital products of tomorrow.",
  sub:
    "Digital products built to last.",
  email: "hello@inviqon.com",
  proof: "Product Studio 路 Custom Software 路 Automations 路 Integrations",
};
---

<Navbar brand={brand} logo={inviqonLogo} />

<section class="relative">
  <div class="mx-auto max-w-6xl px-5">
    <div class="min-h-[calc(100vh-96px)] flex items-center justify-center py-14 md:py-20">
      <div class="w-full max-w-3xl text-center">
        <p class="reveal text-xs tracking-[0.24em] text-white/55">
          SOFTWARE HOUSE 路 PRODUCT STUDIO
        </p>

        <h1 class="reveal reveal-2 mt-5 text-4xl font-semibold tracking-tight text-white/95 md:text-6xl md:leading-[1.03]">
          We build the <span class="accent">digital products</span> of tomorrow.
        </h1>

        <p class="reveal reveal-3 mx-auto mt-6 max-w-2xl text-base leading-relaxed text-white/65 md:text-lg">
          {brand.sub}
        </p>

       <div class="reveal reveal-4 mt-10 flex items-center justify-center">
          <a
            href={`mailto:${brand.email}?subject=inviqon%20%E2%80%94%20Inquiry&body=Hi%20inviqon%2C%0A%0AGoal%3A%20...%0AContext%3A%20...%0ATimeline%3A%20...%0A%0AThanks%2C%0A`}
            class="
              group
              text-sm
              font-medium
              text-white/80
              transition
              hover:text-white
            "
          >
            <span class="relative inline-block">
              {brand.email}
              <!-- underline -->
              <span
                class="
                  pointer-events-none
                  absolute
                  left-0
                  -bottom-1
                  h-px
                  w-full
                  bg-white/25
                  transition
                  group-hover:bg-white/60
                "
              ></span>
            </span>
          </a>
        </div>

        <div class="reveal reveal-5 mx-auto mt-12 max-w-xl rounded-2xl glass px-5 py-4">
          <p class="text-xs leading-relaxed text-white/60">{brand.proof}</p>
        </div>

        <div class="mx-auto mt-12 h-px w-24 bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
      </div>
    </div>
  </div>
</section>